<Window x:Class="MyPhotoEditor.Thresholding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPhotoEditor"
        mc:Ignorable="d"
        Title="Thresholding" Height="133.051" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Sila binaryzacji" />
        <Slider Grid.Row="1" Minimum="0" Maximum=" 65535" Name="slider_binary" Value="30000"/>
        <Button Content="Ok" Width="50" Height="25px" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"></Button>
    </Grid>
</Window>
